<odoo>
  <data>
    <!-- View for TMS Item Variant -->
    <record id="view_tms_item_variant_form" model="ir.ui.view">
      <field name="name">tms.item.variant.form</field>
      <field name="model">tms.item.variant</field>
      <field name="arch" type="xml">
        <form string="TMS Item Variant">
          <sheet>
            <group>
              <field name="code"/>
              <field name="item_no"/>
              <field name="description"/>
              <field name="description_2"/>
              <field name="barcode_type_id" />
              <field name="barcode_code" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="tms_item_variant_view_tree" model="ir.ui.view">
      <field name="name">tms.item.variant.view.tree</field>
      <field name="model">tms.item.variant</field>
      <field name="arch" type="xml">
        <tree string="">
            <field name="code"/>
            <field name="item_no"/>
            <field name="description"/>
            <field name="description_2"/>
            <field name="barcode_type_id" />
            <field name="barcode_code" />
        </tree>
      </field>
    </record>

  </data>
</odoo>