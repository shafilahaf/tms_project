<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_receipt_view_tree" model="ir.ui.view">
        <field name="name">purchase_receipt.view.tree</field>
        <field name="model">tms.purchase.receipt.header</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="document_no" />
                <field name="source_doc_no" />
                <field name="posting_date" />
                <field name="vendor_shipment_no" />
            </tree>
        </field>
    </record>

    <record id="purchase_receipt_view_form" model="ir.ui.view">
        <field name="name">purchase.receipt.view.form</field>
        <field name="model">tms.purchase.receipt.header</field>
        <field name="arch" type="xml">
            <form string="">
                <!-- <header>
                    <button name="scan_item" string="Scan Item" type="object" class="oe_highlight" />
                    <button name="submit" string="Submit" type="object" class="oe_highlight" />
                </header> -->
                <sheet>
                    <div class="oe_button_group" style="margin-bottom: 15px;">
                        <button name="scan_itemm" string="Scan Item" type="object" class="oe_highlight" />
                        <button name="submit" string="Submit" type="object" class="oe_highlight" style="margin-left: 10px;" />
                    </div>
                    <group col="2">
                        <group>
                            <field name="document_no" />
                            <field name="source_doc_no" />
                            <field name="state" readonly="1"/>
                        </group>
                        <group>
                            <field name="posting_date" />
                            <field name="vendor_shipment_no" />
                        </group>
                    </group>
                    <notebook>
                        <page name="receipt_line" string="Receipt Line">
                            <field name="receipt_line_ids">
                                <tree editable="bottom">
                                    <field name="line_no" force_save="1"/>
                                    <field name="item_no" />
                                    <field name="description" force_save="1"/>
                                    <field name="quantity" force_save="1"/>
                                    <field name="uom" force_save="1"/>
                                    <field name="qty_to_receive" force_save="1"/>
                                    <field name="qty_received" force_save="1"/>
                                    <field name="available_item_ids" invisible="1"/>
                                    <field name="item_tracking_code" invisible="1"/>
                                    <!-- <button name="action_view_reservation_entries" string="Detail" type="object" class="oe_highlight" /> -->
                                    <button name="action_view_reservation_entries" string="Detail" type="object" class="oe_highlight" attrs="{'invisible': [('item_tracking_code', '=', '')]}" />
                                </tree>
                                <form>
                                    <group>
                                        <field name="line_no" force_save="1"/>
                                        <field name="item_no" />
                                        <field name="description" />
                                        <field name="quantity" />
                                        <field name="uom" />
                                        <field name="qty_to_receive" />
                                        <field name="qty_received" />
                                        <field name="available_item_ids" invisible="1"/>
                                        <field name="item_tracking_code" invisible="1"/>
                                        <button name="action_view_reservation_entries" string="Detail" type="object" class="oe_highlight" attrs="{'invisible': [('item_tracking_code', '=', '')]}" />
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tms_reservation_entry" model="ir.actions.act_window">
        <field name="name">Reservation Entries</field>
        <field name="res_model">tms.reservation.entry</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="tms_reservation_entry_view_tree"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>


</odoo>
