    <menuitem id="menu_tms_handheld_shipment" name="Shipment" parent="menu_tms_handheld" sequence="30"/>
    <menuitem id="menu_tms_sales" name="Sales Order" parent="menu_tms_handheld_shipment" action="action_tms_sales_order" sequence="10"/>
    <!-- <menuitem id="menu_tms_transfer_shipment" name="Transfer Order" parent="menu_tms_handheld_shipment" action="action_tms_transfer" sequence="20"/> -->

    <menuitem id="menu_tms_handheld_return" name="Return" parent="menu_tms_handheld" sequence="40"/>
    <menuitem id="menu_tms_purchase_order_return" name="Purchase Order" parent="menu_tms_handheld_return" action="action_tms_purchase_orderss_return" sequence="10"/>
    <menuitem id="menu_tms_sales_return" name="Sales Order" parent="menu_tms_handheld_return" action="action_tms_sales_return" sequence="20"/>

    <menuitem id="menu_tms_handheld_transfer" name="Transfer" parent="menu_tms_handheld" action="action_tms_transfer" sequence="50"/>

    <menuitem id="menu_tms_item_journal_phys" name="Item Journal Phys" parent="menu_tms_handheld" action="action_tms_item_journal" sequence="80"/>
    <menuitem id="menu_tms_item_journal" name="Item Journal" parent="menu_tms_handheld" action="action_tms_transaction_journal" sequence="90"/>
</odoo>
