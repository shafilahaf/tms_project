    <record id="action_tms_reservation_entry2" model="ir.actions.act_window">
        <field name="name">Reservation Entries</field>
        <field name="res_model">tms.reservation.entry</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="tms_reservation_entry_view_tree"/>
        <field name="context">{'create': True, 'edit': False, 'delete': True}</field>
        <field name="domain">[]</field>
    </record>


</odoo>
