<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tms_purchase_scan_item_view_form" model="ir.ui.view">
        <field name="name">tms.purchase.scan.item.view.form</field>
        <field name="model">tms.purchase.scan.item</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_button_group" style="margin-bottom: 15px;">
                        <button name="clear_value" string="Clear" type="object" class="oe_highlight" />
                        <button name="submit_purchase_receipt_line" string="Submit" type="object" class="oe_highlight" style="margin-left: 10px;" />
                         <button name="back_to_receipt" string="Back to Receipt" type="object" class="oe_highlight" style="margin-left: 10px;" />
                    </div>
                    <group>
                        <field name="barcode_code" widget="rt_widget_field_char_qr_cam"/>
                        <field name="item_no" options="{'no_create': True, 'no_create_edit':True}"/>
                        <field name="item_description" force_save="1"/>
                        <field name="serial_number" attrs="{'invisible': [('contains_sn','=',False)]}" widget="rt_widget_field_char_qr_cam"/>
                        <field name="lot_number" attrs="{'invisible': [('contains_lot','=',False)]}" widget="rt_widget_field_char_qr_cam"/>
                        <field name="exp_date" invisible="1"/>
                        <field name="quantity" widget="char" attrs="{'invisible': [('contains_sn','=',True)]}"/>
                        <field name="available_item_ids" invisible="1"/>
                        <field name="item_tracking_code" invisible="1"/>
                        <field name="contains_sn" invisible="1"/>
                        <field name="contains_lot" invisible="1"/>
                    </group>
                    <notebook>
                        <page name="reservation_entry" string="Reservation Entry" attrs="{'invisible': [('contains_lot','=',False), ('contains_sn','=',False)]}">
                            <field name="reservation_entry_ids">
                                <tree editable="bottom">
                                    <field name="serial_no" />
                                    <field name="lot_no" />
                                    <field name="quantity" />
                                    <field name="expiration_date"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="serial_no" />
                                        <field name="lot_no" />
                                        <field name="quantity" />
                                        <field name="expiration_date"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
