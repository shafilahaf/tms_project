<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tms_receipt_header_view_tree" model="ir.ui.view">
        <field name="name">tms.receipt.header.view.tree</field>
        <field name="model">tms.receipt.header</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="document_date" />
                <field name="document_type" />
                <field name="no" />
                <field name="refer_to_doc_no" />
            </tree>
        </field>
    </record>

    <record id="tms_receipt_header_view_form" model="ir.ui.view">
        <field name="name">tms.receipt.header.view.form</field>
        <field name="model">tms.receipt.header</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button name="submit_receipt" string="Submit" type="object" class="oe_highlight" />
                    <button name="scan_receipt" string="Scan" type="object" class="oe_highlight" />
                    <field name="status" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <field name="document_date" />
                        <field name="document_type" />
                        <field name="no" />
                        <field name="refer_to_doc_no" />
                        <field name="refer_to_doc_type" />
                    </group>
                    <notebook>
                        <page name="receipt_line" string="Lines">
                            <field name="receipt_line_ids">
                                <tree editable="bottom">
                                    <field name="line_no" />
                                    <field name="document_type" force_save="1"/>
                                    <field name="document_no" force_save="1"/>
                                    <field name="item_no" />
                                    <field name="item_description" />
                                    <field name="quantity" />
                                    <field name="uom" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Sequence -->
    <record id="tms_receipt_header_sequence" model="ir.sequence">
        <field name="name">Receipt Sequence</field>
        <field name="code">tms.receipt.header</field>
        <field name="prefix">RECEIPT/PO/</field>
        <field name="padding">5</field>
    </record>

</odoo>
