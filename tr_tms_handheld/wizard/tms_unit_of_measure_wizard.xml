<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tms_uom_view_form" model="ir.ui.view">
        <field name="name">tms.uom.wizard.view.form</field>
        <field name="model">tms.unit.of.measure.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="description" readonly="1" />
                        <field name="company" />
                    </group>
                </sheet>
                <footer>
                    <button name="get_unit_of_measure" string="Get UoM" type="object" class="oe_highlight"  />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
